                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/round_hashbox_border">

                    <TextView
                        android:id="@+id/birthday_detail_item4_one_hash2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="#스크래쳐 박스"
                        android:textColor="#999999"
                        android:textSize="14dp"
