<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MyPage.History.HistoryActivity"
    android:background="#EFEDED"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문내역"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:id="@+id/history_x_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/x_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CECECE"
            android:layout_alignParentBottom="true">
        </LinearLayout>
    </RelativeLayout>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/history_buy_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="26dp"
                >
            
            <LinearLayout
                android:id="@+id/buy_one"
                android:layout_width="315dp"
                android:layout_height="151dp"
                android:background="#ffffff"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생일박스"/>
            </LinearLayout>

                <TextView
                    android:layout_below="@+id/buy_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="14dp"
                    android:text="해당 월일을 제외한 \n박스 취소가 가능합니다"/>
                
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_detail_btn_gray"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/buy_one"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="14dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/history_buy_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="26dp"
                >

                <LinearLayout
                    android:id="@+id/buy_three"
                    android:layout_width="315dp"
                    android:layout_height="151dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3개월"/>
                </LinearLayout>

                <TextView
                    android:layout_below="@+id/buy_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="14dp"
                    android:text="해당 월일을 제외한 \n박스 취소가 가능합니다"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_detail_btn_gray"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/buy_three"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="14dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/history_buy_six"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="26dp"
                >

                <LinearLayout
                    android:id="@+id/buy_six"
                    android:layout_width="315dp"
                    android:layout_height="151dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6개월"/>
                </LinearLayout>

                <TextView
                    android:layout_below="@+id/buy_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="14dp"
                    android:text="해당 월일을 제외한 \n박스 취소가 가능합니다"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_detail_btn_gray"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/buy_six"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="14dp"/>

            </RelativeLayout>

            <ImageView
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dash_bar_img"/>
            
            
        </LinearLayout>
        

    </ScrollView>

</LinearLayout>