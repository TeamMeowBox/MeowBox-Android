<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Login.LoginActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/login_back_btn"
            android:layout_marginLeft="22dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_btn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textColor="#4C4E51"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <View
        android:id="@+id/login_border"
        android:layout_below="@+id/login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#707070"
        />


    <ScrollView
        android:layout_below="@+id/login_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="102dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/login_logo"
                android:layout_centerHorizontal="true"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/email_icon_pink"/>

            <LinearLayout
                android:id="@+id/login_email_layout"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/login_logo"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginTop="67dp"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/login_email_image"
                    android:paddingTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/email_icon"/>

                <EditText
                    android:inputType="text"
                    android:id="@+id/login_email"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="200dp"
                    android:hint="이메일"
                    android:layout_height="wrap_content"
                    android:background="#00000000"/>


            </LinearLayout>

            <View
                android:layout_below="@+id/login_email_layout"
                android:layout_marginTop="4dp"
                android:layout_centerHorizontal="true"
                android:layout_width="255dp"
                android:layout_height="1dp"
                android:background="#999999"/>

            <LinearLayout
                android:id="@+id/login_password_layout"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/login_email_layout"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginTop="37dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/login_password_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/password_icon"/>

                <EditText
                    android:inputType="text"
                    android:id="@+id/login_password"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="200dp"
                    android:hint="비밀번호"
                    android:layout_height="wrap_content"
                    android:background="#00000000"/>


            </LinearLayout>

            <View
                android:id="@+id/login_border_two"
                android:layout_below="@+id/login_password_layout"
                android:layout_marginTop="4dp"
                android:layout_centerHorizontal="true"
                android:layout_width="255dp"
                android:layout_height="1dp"
                android:background="#999999"/>

            <ImageView
                android:layout_below="@+id/login_border_two"
                android:id="@+id/loginBtn"
                android:layout_marginTop="61dp"
                android:layout_centerHorizontal="true"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:src="@drawable/login_icon"/>



        </RelativeLayout>

    </ScrollView>
    
    <RelativeLayout
        android:id="@+id/login_to_sign_btn"
        android:layout_alignParentBottom="true"
        android:background="#EFEDED"
        android:layout_width="match_parent"
        android:layout_height="83dp">

        <TextView
            android:id="@+id/login_to_sign_text"
            android:textSize="14dp"
            android:textColor="#999999"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />



    </RelativeLayout>






</RelativeLayout>