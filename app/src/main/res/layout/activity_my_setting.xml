<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.MyPage.MySettingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/my_setting_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 계정 설정"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:id="@+id/mysetting_x_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/x_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            />
    </RelativeLayout>

    <View
        android:id="@+id/my_setting_view"
        android:layout_below="@+id/my_setting_layout"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#707070"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="132.75dp"
        android:background="#E68789">

        <RelativeLayout
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_centerInParent="true">

        <woo.sopt22.meowbox.View.MyPage.CircleImageView
            android:id="@+id/mysetting_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/camera_icon"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:text="내 정보"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#D4D4D4"
                android:layout_alignParentBottom="true">
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <TextView
            android:layout_marginLeft="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="#4C4E51"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/mysetting_my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="황윤선"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#D4D4D4"
            android:layout_alignParentBottom="true">
        </LinearLayout>
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp">

            <TextView
                android:layout_marginLeft="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:textColor="#4C4E51"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/mysetting_my_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hwang23@gmail.com"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="22dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#D4D4D4"
                android:layout_alignParentBottom="true">
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp">

            <TextView
                android:layout_marginLeft="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:textColor="#4C4E51"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/mysetting_my_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="010-2738-1387"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="22dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#D4D4D4"
                android:layout_alignParentBottom="true">
            </LinearLayout>
        </RelativeLayout>


        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="14.5dp"
        android:background="#EFEDED">

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="43dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:text="내 고양이 정보"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#D4D4D4"
                    android:layout_alignParentBottom="true">
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="43dp">

                <TextView
                    android:layout_marginLeft="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textColor="#4C4E51"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/mysetting_cat_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="온풍이"
                    android:textSize="16sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="22dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#D4D4D4"
                    android:layout_alignParentBottom="true">
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="43dp">

                <TextView
                    android:layout_marginLeft="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="크기"
                    android:textColor="#4C4E51"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <Button
                    android:layout_marginLeft="22dp"
                    android:id="@+id/custom_button1"
                    android:layout_width="155dp"
                    android:layout_height="38.5dp"
                    android:text="조금"
                    android:layout_alignParentLeft="true"/>

                <Button
                    android:layout_marginRight="22dp"
                    android:id="@+id/custom_button2"
                    android:layout_width="155dp"
                    android:layout_height="38.5dp"
                    android:text="보통"
                    android:layout_alignParentRight="true"/>

                <Button
                    android:layout_marginTop="9.2dp"
                    android:layout_below="@+id/custom_button1"
                    android:layout_marginLeft="22dp"
                    android:id="@+id/custom_button3"
                    android:layout_width="155dp"
                    android:layout_height="38.5dp"
                    android:text="과체중"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#D4D4D4"
                    android:layout_alignParentBottom="true">
                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="43dp">

        <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="22dp"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4C4E51"
                android:text="생일"
                android:textSize="16sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:orientation="horizontal">


            <Spinner
                android:entries="@array/year"
                android:id="@+id/mysetting_year"
                android:layout_width="110dp"
                android:layout_height="wrap_content"></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="년"/>

            <Spinner
                android:entries="@array/month"
                android:id="@+id/mysetting_month"
                android:layout_width="85dp"
                android:layout_height="wrap_content"></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월"/>

            <Spinner
                android:entries="@array/day"
                android:id="@+id/mysetting_day"
                android:layout_width="75dp"
                android:layout_height="wrap_content"></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일"/>
        </LinearLayout>

                <LinearLayout
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#D4D4D4"
                    android:layout_alignParentBottom="true">
                </LinearLayout>

            </RelativeLayout>

        <TextView
            android:layout_marginLeft="22dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#4C4E51"
            android:layout_marginTop="9.2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알레르기 및 특이사항"/>

        <EditText
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:paddingLeft="11dp"
            android:textSize="12dp"
            android:paddingTop="9.2dp"
            android:gravity="top"
            android:layout_marginTop="22dp"
            android:layout_width="match_parent"
            android:hint="알레르기가 있는 재료나 좋아하는 재료에 대해 \n적어주세요"
            android:layout_height="177dp"
            android:background="@drawable/edittext_background"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

        </LinearLayout>






    </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/mysetting_save"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#E68789">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장하기"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:textStyle="normal"
            android:layout_centerInParent="true"/>



    </RelativeLayout>

    

</RelativeLayout>