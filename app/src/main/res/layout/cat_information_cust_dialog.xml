<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/button_border">

    <RelativeLayout
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/delete_ticket_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="22dp"
            android:text="고양이 정보가 아직 없어요!"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            />

        <LinearLayout
            android:id="@+id/delete_ticket_ask"
            android:layout_below="@+id/delete_ticket_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="16dp"
                android:textColor="#4C4E51"
                android:text="나의 고양이 정보를 입력하여"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="나의 고양이에게 \n꼭 맞는 박스를 받아보세요!"
                android:textColor="#4C4E51"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="취소할 경우 맞춤 박스는 선물이 불가능합니다"
                android:textColor="#999999"
                android:layout_gravity="center"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_below="@+id/delete_ticket_ask"
            android:layout_marginTop="27dp"
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <LinearLayout
                android:id="@+id/cat_question_cancel"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cancel_border"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:text="취소하기"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cat_question_apply"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ok_border"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:text="입력하기"/>

            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>