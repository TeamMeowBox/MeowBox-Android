<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/order_name"
        android:layout_marginRight="22dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20.5dp"
        android:layout_width="164dp"
        android:layout_height="28dp"
        android:src="@drawable/order_four_step_name"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#707070"/>

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="22dp"
        android:layout_below="@+id/order_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:text="반려묘의"
            android:textColor="#4C4E51"/>

        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28dp"
                android:text="이름"
                android:textStyle="bold"
                android:textColor="#4C4E51"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="은 무엇인가요?"
                android:textSize="28dp"
                android:textColor="#4C4E51"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#E68789"
            android:textSize="14dp"
            android:text="*필수항목(*)은 꼭 입력해주세요"/>

        <TextView
            android:layout_marginTop="49dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="16dp"
            android:textColor="#4C4E51"/>

        <EditText
            android:id="@+id/order_cat_name"
            android:paddingBottom="15dp"
            android:hint="고양이 이름"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"/>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/order_name_next_btn"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#E68789">

        <TextView
            android:id="@+id/order_name_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:textStyle="normal"
            android:layout_centerInParent="true"/>

        <ImageView
            android:layout_marginLeft="8dp"
            android:layout_width="13dp"
            android:layout_height="14dp"
            android:src="@drawable/next_arrow"
            android:layout_toRightOf="@+id/order_name_next"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

</RelativeLayout>