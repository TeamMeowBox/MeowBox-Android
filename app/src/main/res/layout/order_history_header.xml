<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/header_ticket_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/order_ticket_pink"/>

    <RelativeLayout
        android:id="@+id/header_ticket_name"
        android:layout_width="42dp"
        android:layout_height="19dp"
        android:background="@color/pink"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="35dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정기권"
            android:textSize="10dp"
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/header_ticket_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="63dp">

        <TextView
            android:id="@+id/header_payment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4C4E51"
            android:text="3개월 정기권"
            android:textSize="24dp"/>

        <TextView
            android:id="@+id/header_payment_date"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/header_payment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018.04.26 - 2018.06.26"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header_cancel_btn"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="31dp"
        android:layout_below="@+id/header_ticket_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/header_explaination"
            android:textSize="13dp"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해당 월일을 제외한"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/header_explaination"
            android:id="@+id/header_explaination2"
            android:textSize="13dp"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="박스 취소가 가능합니다"/>



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/order_commutation_cancel_btn"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>

    <ImageView
        android:layout_marginTop="10dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:layout_below="@+id/header_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dash_bar_img"/>


</RelativeLayout>